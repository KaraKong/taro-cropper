.crop-layout {
  display: flex;
  align-items: center;
  width: 100vw;
  height: 100vw;
  background-color: black;
  position: relative;
  overflow-y: scroll; }
  .crop-layout .mask-image {
    width: 100%;
    height: 100%;
    opacity: 0.5;
    position: absolute;
    display: block; }
  .crop-layout .stage {
    position: absolute; }
  .crop-layout .image {
    width: 100%;
    height: 100%;
    display: block;
    position: absolute; }
  .crop-layout .box {
    position: absolute;
    border: 4rpx solid rgba(0, 0, 0, 0.2);
    border-radius: 8rpx;
    box-sizing: border-box; }
  .crop-layout .lt {
    position: absolute;
    left: -3rpx;
    top: -3rpx;
    width: 36rpx;
    height: 36rpx; }
    .crop-layout .lt::after {
      position: absolute;
      content: "";
      background: transparent;
      height: 20rpx;
      width: 20rpx;
      border-left: 6rpx solid white;
      border-top: 6rpx solid white;
      border-top-left-radius: 8rpx; }
  .crop-layout .lb {
    position: absolute;
    left: -3rpx;
    bottom: -3rpx;
    width: 36rpx;
    height: 36rpx; }
    .crop-layout .lb::after {
      position: absolute;
      bottom: 0;
      content: "";
      background: transparent;
      height: 20rpx;
      width: 20rpx;
      border-left: 6rpx solid white;
      border-bottom: 6rpx solid white;
      border-bottom-left-radius: 8rpx; }
  .crop-layout .rt {
    position: absolute;
    width: 36rpx;
    height: 36rpx;
    right: -3rpx;
    top: -3rpx; }
    .crop-layout .rt::after {
      position: absolute;
      right: 0;
      content: "";
      background: transparent;
      height: 20rpx;
      width: 20rpx;
      border-right: 6rpx solid white;
      border-top: 6rpx solid white;
      border-top-right-radius: 8rpx; }
  .crop-layout .rb {
    position: absolute;
    right: -3rpx;
    bottom: -3rpx;
    width: 36rpx;
    height: 36rpx; }
    .crop-layout .rb::after {
      position: absolute;
      content: "";
      right: 0;
      bottom: 0;
      background: transparent;
      height: 20rpx;
      width: 20rpx;
      border-right: 6rpx solid white;
      border-bottom: 6rpx solid white;
      border-bottom-right-radius: 8rpx; }
  .crop-layout .line-v {
    position: absolute;
    width: 2rpx;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.5); }
  .crop-layout .line-h {
    height: 2rpx;
    position: absolute;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.5); }
  .crop-layout .icon-enter {
    background: #fff;
    position: absolute;
    bottom: -22rpx;
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    left: calc(50% - 22rpx);
    z-index: 5; }
    .crop-layout .icon-enter::after {
      content: "";
      position: absolute;
      top: 12rpx;
      left: 16rpx;
      width: 11rpx;
      height: 18rpx;
      border-color: #232830;
      border-style: solid;
      border-width: 0 5rpx 5rpx 0;
      border-radius: 5rpx;
      -webkit-transform: rotate(45deg);
      transform: rotate(45deg); }

